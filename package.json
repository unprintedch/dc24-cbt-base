  },
  "devDependencies": {
    "autoprefixer": "^10.4.19",
    "esbuild": "^0.21.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3"
  },
  "dependencies": {
    "swiper": "^11.1.1"
  }
}
